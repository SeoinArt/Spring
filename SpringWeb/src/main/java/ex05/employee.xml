<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.3.xsd">

								<!-- 생성자 Injection -->
<!-- [1] 기본생성자를 이용해 EmpImpl 빈 생성 -->
	<bean id="e1" class="ex05.EmpImpl"/>
		 
	
<!-- [2] String 1개인 기본생성자를 이용해 EmpImpl 빈 생성 
		=> 생성자를 통해 name값을 대입한다.
												-->
	<bean id="e2" class="ex05.EmpImpl">
		<constructor-arg index="0" name="name" type="java.lang.String" value="Scott" />
	</bean>	
	
<!-- [3] String 2개인 생성자 (부서, 이름)  -->	
	<bean id="e3" class="ex05.EmpImpl">
		<constructor-arg index="0" type="java.lang.String" >
			<value>Sales</value>
		</constructor-arg>
		<constructor-arg index="1" type="java.lang.String" value="King"/>
	</bean>

<!-- [4] String 2개 int 1개인 생성자 (부서, 이름, 급여)  -->
	<bean id="e4" class="ex05.EmpImpl">
		<constructor-arg index="0" type="java.lang.String" value="Sales"/>
		<constructor-arg index="1" type="java.lang.String" value="King"/>
		<constructor-arg index="2" type="int" value="50000"/>
	</bean>
	
<!-- [5] Random객체를 받는 생성자 -->
	<bean id="random" class="java.util.Random"/>	
	<bean id="e5" class ="ex05.EmpImpl">
		<constructor-arg index="0" ref="random"></constructor-arg>
	</bean>
	
	
</beans>
